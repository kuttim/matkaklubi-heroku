<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
  <%- include ("../partials/header.ejs") %>
</head>

<body>
  <div class="">
    <div class="container-fluid header-section">
      <%- include ("../partials/nav.ejs") %>

    </div>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h3>Kontakt</h3>
                </div>
                <div class="card-body">
                    <form id="contact-form">
                        <div class="alert alert-success" style="display: none;" id="contact-alert" role="alert">
                            Sinu kiri on saadetud!
                          </div>
                        <div class="form-group">
                            <label for="name">Nimi</label>
                            <input type="text" class="form-control" required="true" name="name" id="name" placeholder="Nimi">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" required="true" name="email" id="email" placeholder="Sinu email">
                        </div>
                        <div class="form-group">
                            <label for="message">Kiri</label>
                            <textarea class="form-control" required="true" name="message" id="message" rows="3"></textarea>
                        </div>
                        <button type="submit" id="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div> 
<script src="js/contact.js"></script>
</body>
</html>
