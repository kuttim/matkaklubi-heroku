<!DOCTYPE html>
<html>
  <head>
    <%- include ("../partials/header.ejs") %>
  </head>

  <body>
    <div class="">
      <div class="container-fluid header-section">
        <%- include ("../partials/nav.ejs") %>
      </div>
      <div class="d-flex justify-content-center">
        <div class="container mt-5">
          <div class="row">
              <div class="col-lg-8">
                  <article>
                      <header class="mb-4">
                          <h1 class="fw-bolder mb-1">
                            <%= singleNews.title %>
                          </h1>
                          <div class="text-muted fst-italic mb-2">Viimati uuendatud: 
                            <%= singleNews.updatedAt %>
                          </div>
                          <% for (var i = 0; i < singleNews.tags.length; i++) { %>
                          <a class="badge bg-secondary text-decoration-none link-light">
                              <%= singleNews.tags[i].name %>
                          </a>
                          <% } %>
                      </header>
                      <figure class="mb-4">
                          <img class="img-fluid rounded" src="https://picsum.photos/900/400">
                        </figure>
                      <section class="mb-5">
                          <p class="fs-5 mb-4">
                            <%= singleNews.description %>
                          </p>
                          <% for (var i = 0; i < singleNews.content.length; i++) { %>
                            
                            <h2 class="fw-bolder mb-4 mt-5">
                               <%= singleNews.content[i].title %>
                          </h2>
                            <%= singleNews.content[i].text %>
                            <% } %>
                      </section>
                  </article>
              </div>
          </div>
      </div>
          </div>
      </div>
    </div>
    <%- include ("../partials/footer.ejs") %>
  </body>
</html>
